using System;

public class FormasPagamento
{

	public int Forma_pagamento

	public Pagamento()
	{
		Console.WriteLine("Como o senhor deseja pagar? \n(1-Cartão de crédito) \n(2-Cartão de débito)\n(3-Dinheiro)\n(4-Pix)");
		Forma_pagamento = int.Parse(Console.ReadLine());
        switch (Forma_pagamento)
        {
            case 1:
                Console.WriteLine(CartaoCredito.Cartao());
                break;

            case 2;
                Console.WriteLine(CartaoDebito.Cartao());
                break;

            case 3:
                Console.WriteLine(Dinheiro.Vista());
                break;

            case 4:
                Console.Write(Pix.Codigo());
                break;

        }
}



